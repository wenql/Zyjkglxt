<div ng-controller="main.views.administration.users.index as vm">
    <div class="m-subheader ">
        <div class="d-flex align-items-center">
            <div class="mr-auto">
                <h3 class="m-subheader__title m-subheader__title--separator">
                    <span>用户</span>
                </h3>
                <span class="m-section__sub">
                    管理用户及权限.
                </span>
            </div>
            <button class="btn btn-primary blue" style="" ng-if="vm.permissions.create" ng-click="vm.createUser()"><i class="fa fa-plus"></i> 添加用户</button>
        </div>
    </div>
    <div class="m-content">
        <div class="m-portlet">
            <div class="m-portlet__body">
                <div busy-if="vm.loading">
                    <div ui-grid="vm.userGridOptions" ui-grid-pagination ui-grid-resize-columns ui-grid-auto-resize ng-style="vm.getTableHeight()"></div>
                </div>
            </div>
        </div>
    </div>
</div>