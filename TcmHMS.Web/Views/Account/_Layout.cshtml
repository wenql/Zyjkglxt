@using System.Threading
@using System.Web.Optimization
@using Abp.Timing
@using TcmHMS
@{
    SetAntiForgeryCookie();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" href="~/favicon.ico">
    <title>TcmHMS</title>
    @Styles.Render("~/Bundles/login-vendor/css")
    @RenderSection("styles", required: false)
    <script type="text/javascript">
        var abp = abp || {}; abp.appPath = '@ApplicationPath';
    </script>
</head>
<body class="login-page">
    <div class="login-box">
        <div class="logo">
            <a href="javascript:void(0);">TcmHMS</a>
        </div>
        @RenderBody()
        <div class="row">
            <div class="col-xs-12 text-center" style="color: #e9e9e9">
                <small>&copy; @DateTime.Now.Year TcmHMS. <b>Version </b> @AppVersionHelper.Version [@AppVersionHelper.ReleaseDate.ToString("yyyyMMdd")]</small>
            </div>
        </div>
    </div>
    @Scripts.Render("~/Bundles/login-vendor/js/bottom")
    <script>
        moment.locale('@Thread.CurrentThread.CurrentUICulture.Name');
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
